<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/list_usage_status_icon_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_marginLeft="4dp"
        android:src="@drawable/ic_images"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/list_usage_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"

        android:text="@string/sysname"
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="1"

        app:layout_constraintLeft_toRightOf="@id/list_usage_status_icon_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/list_usage_qty_tv"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text=""
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="1"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <TextView
        android:id="@+id/list_usage_date_tv"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text=""
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="1"

        app:layout_constraintRight_toLeftOf="@id/list_usage_qty_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>











