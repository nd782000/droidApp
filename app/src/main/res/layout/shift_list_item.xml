<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_gravity="center_horizontal">


    <TextView
        android:id="@+id/list_shift_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"

        android:text="@string/sysname"
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="1"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/list_shift_qty_tv"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="@string/sysname"
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="1"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <TextView
        android:id="@+id/list_shift_stop_tv"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="@string/sysname"
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="1"

        app:layout_constraintRight_toLeftOf="@id/list_shift_qty_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/list_shift_start_tv"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="@string/sysname"
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="1"

        app:layout_constraintRight_toLeftOf="@id/list_shift_stop_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>











