<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/equipment_item_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:src="@drawable/ic_images"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="16dp"
        android:text="@string/equipment"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/list_type"
        app:layout_constraintStart_toEndOf="@id/equipment_item_image_view"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/list_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:text="@string/equipment"

        android:translationX="12dp"
        app:layout_constraintStart_toStartOf="@+id/list_name"
        app:layout_constraintTop_toBottomOf="@+id/list_name" />



    <TextView
        android:id="@+id/textViewOptions"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        android:text="&#8942;"
        android:textAlignment="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/list_name" />

</androidx.constraintlayout.widget.ConstraintLayout>











