<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/employee_text_list_item"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/employee_text_list_item_iv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_weight="1"

        android:layout_margin="8dp"
        android:src="@drawable/user_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/employee_text_list_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="16dp"
        android:text="@string/employee_name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/employee_text_list_item_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/employee_text_list_item_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingLeft="32dp"
        android:text="@string/employee_name"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/employee_text_list_item_iv"
        app:layout_constraintTop_toBottomOf="@+id/employee_text_list_item_name_tv" />


    <ImageView
        android:id="@+id/employee_text_list_item_check_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="14dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_check_enabled"
        />



</androidx.constraintlayout.widget.ConstraintLayout>











