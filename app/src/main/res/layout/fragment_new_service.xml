<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/new_service_name_title_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingHorizontal="4dp"
        android:singleLine="true"
        android:text="@string/new_service_name"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/new_service_name_editTxt"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:paddingHorizontal="4dp"
        android:layout_margin="5dp"
        android:imeOptions="actionDone"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_service_name_title_txt"/>

    <TextView
        android:id="@+id/new_service_type_title_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingHorizontal="4dp"
        android:singleLine="true"
        android:text="@string/new_service_type"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_service_name_editTxt" />


    <Spinner
        android:id="@+id/new_service_type_spinner"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/text_view_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_service_type_title_txt"
        />

    <!--
    <TextView
        android:id="@+id/new_service_type_txt"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:textColor="?attr/editTextColor"
        android:background="@drawable/text_view_layout"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_margin="5dp"

        android:paddingHorizontal="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_service_type_title_txt"
        />

    <EditText
        android:id="@+id/new_service_type_editTxt"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="top"
        android:inputType="none"

        android:paddingHorizontal="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_service_type_title_txt"/>
        -->

    <TextView
        android:id="@+id/new_service_frequency_title_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingHorizontal="4dp"
        android:singleLine="true"
        android:text="@string/new_service_frequency"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_service_type_spinner" />
    <EditText
        android:id="@+id/new_service_frequency_editTxt"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:paddingHorizontal="4dp"
        android:layout_margin="5dp"
        android:imeOptions="actionDone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_service_frequency_title_txt" />



    <LinearLayout
        android:id="@+id/current_next_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_service_frequency_editTxt">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/new_service_current_title_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"


                android:ellipsize="end"
                android:paddingHorizontal="4dp"
                android:singleLine="true"
                android:text="@string/new_service_current"
                android:textSize="14sp"
                android:layout_marginTop="4dp"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <EditText
                android:id="@+id/new_service_current_editTxt"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:paddingHorizontal="4dp"
                android:inputType="number"
                android:layout_margin="5dp"
                android:imeOptions="actionDone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/new_service_current_title_txt"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/new_service_next_title_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"


                android:ellipsize="end"
                android:paddingHorizontal="4dp"
                android:singleLine="true"
                android:text="@string/new_service_next"
                android:textSize="14sp"
                android:layout_marginTop="4dp"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <EditText
                android:id="@+id/new_service_next_editTxt"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:paddingHorizontal="4dp"
                android:layout_margin="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/new_service_next_title_txt"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/new_service_instructions_title_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingHorizontal="4dp"
        android:singleLine="true"
        android:text="@string/new_service_instructions"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_next_layout" />
    <EditText
        android:id="@+id/new_service_instructions_editTxt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="top"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:paddingHorizontal="4dp"
        android:layout_margin="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_service_instructions_title_txt"
        app:layout_constraintBottom_toTopOf="@+id/new_service_footer_cl"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/button"
        />

    <!-- Footer -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/new_service_footer_cl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"


        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/new_service_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="3dp"
            android:text="@string/submit"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

