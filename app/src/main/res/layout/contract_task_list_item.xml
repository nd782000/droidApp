<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="75dp"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/contract_task_item_image_view"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_weight="1"

        android:layout_margin="8dp"
        android:src="@drawable/ic_images"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/image_count_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white_fixed"
        app:layout_constraintLeft_toLeftOf="@id/contract_task_item_image_view"
        app:layout_constraintRight_toRightOf="@id/contract_task_item_image_view"
        app:layout_constraintTop_toTopOf="@id/contract_task_item_image_view"
        app:layout_constraintBottom_toBottomOf="@id/contract_task_item_image_view"
        />

    <TextView
        android:id="@+id/contract_task_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="8dp"
        android:paddingLeft="16dp"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/contract_task_item_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />
    <TextView
        android:id="@+id/contract_task_item_image_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="16dp"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/contract_task_item_image_view"
        app:layout_constraintTop_toBottomOf="@id/contract_task_item_name"
        app:layout_constraintVertical_chainStyle="packed" />



</androidx.constraintlayout.widget.ConstraintLayout>











